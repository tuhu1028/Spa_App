<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rv_detail"
    android:background="#fff3e3"
    >

    <android.support.v4.widget.NestedScrollView
        android:paddingBottom="30dp"
        android:id="@+id/item_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_detail"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ma01"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My Spa"
                android:textSize="30dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/duongvien_goctron_button"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/btnChooseTreatment"
                android:text="Thêm Dịch Vụ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/duongvien_goctron_button"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/btnChoosePromote"
                android:text="Thêm khuyến mãi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <LinearLayout
                android:weightSum="2"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:background="@drawable/duongvien_goctron_button"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/btnChooseTimeFrom"
                    android:text="từ ngày"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_weight="1"
                    android:background="@drawable/duongvien_goctron_button"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/btnChooseTimeEnd"
                    android:text="Đến ngày"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <Button
        android:id="@+id/btn_succset"
        android:text="Xác Nhận"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>